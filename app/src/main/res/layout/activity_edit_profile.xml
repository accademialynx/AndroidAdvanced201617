<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_vertical_margin"
    tools:context=".profile.ProfileDetail"
    android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <EditText
                android:text="@string/profiloEdit"
                android:id="@+id/nomeProfilo"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                />
            <TextView
                android:layout_marginTop="@dimen/marginTop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/metodo_rilevamento"
                android:textColor="@color/textColor"
                />
            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <RadioButton
                android:layout_marginTop="@dimen/marginTopButtons"
                android:id="@+id/gpsButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/gps"/>

            <RadioButton
                android:id="@+id/wifiButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/wifi"/>
            <RadioButton
                android:id="@+id/nfcButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nfc"/>
            <RadioButton
                android:id="@+id/beaconButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/beacon"/>
            </RadioGroup>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/other"
                        android:textColor="@color/textColor"
                        android:layout_marginTop="@dimen/marginTop"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="@dimen/marginTopButtons">

                        <TextView
                            android:id="@+id/lume"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/brightness"
                            android:textColor="@color/textColor"/>
                        <SeekBar

                            android:id="@+id/brightnessBar"
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/lume"
                            android:layout_gravity="center_vertical"
                            />
                        <CheckBox
                            android:id="@+id/brightnessCheckBox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/auto"
                            android:layout_alignParentRight="true"/>
                    </LinearLayout>
                </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/marginTop"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/volume"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/volume"
                    android:textColor="#000"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/marginTopButtons"
                    android:orientation="horizontal"

                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/marginTop"
                        >
                        <TextView
                            android:id="@+id/volumeRing"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/volumeRing"
                            android:textColor="@color/textColor"
                            android:minHeight="30px"
                            />
                        <TextView
                            android:id="@+id/volumeMusic"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/volumeMusic"
                            android:textColor="@color/textColor"
                            android:minHeight="30px"
                            />
                        <TextView
                            android:id="@+id/volumeNotification"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/volumeNotification"
                            android:textColor="@color/textColor"
                            android:minHeight="30px"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/marginTop"
                        >
                        <SeekBar
                            android:id="@+id/volumeBarRing"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/volumeRing"
                            android:minHeight="30px"/>
                        <SeekBar
                            android:id="@+id/volumeBarMusic"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/volumeMusic"
                            android:minHeight="30px"
                            />
                        <SeekBar
                            android:id="@+id/volumeBarNotification"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/volumeNotification"
                            android:minHeight="30px"
                            />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/marginTop"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/bluetooth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bluetooth"
                    android:textColor="@color/textColor"
                    android:layout_weight="1"
                    android:minWidth="650px"/>
                <Switch
                    android:id="@+id/switchBluetooth"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/bluetooth"
                    android:layout_weight="1"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/marginTop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/wifi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/wifi"
                    android:textColor="@color/textColor"
                    android:layout_weight="1"
                    android:minWidth="650px"/>
                <Switch
                    android:id="@+id/switchWifi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/wifi"
                    android:layout_weight="1"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marginTop">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="@string/apps"
                    android:textColor="@color/textColor"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/appList"
                    android:layout_weight="0.5"
                    android:text="-"
                    android:textColor="@color/textColor"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <Button
            android:id="@+id/confirmButton"
            android:text="@string/add"
            android:background="@color/buttonColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#FFF"
            android:layout_marginTop="@dimen/marginTop"
            android:layout_marginBottom="0px"
            />
    </LinearLayout>
</LinearLayout>
