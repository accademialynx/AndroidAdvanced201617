<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ProfileDetail"
    android:orientation="vertical"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp">

    <EditText
        android:text="@string/profiloEdit"
        android:id="@+id/nomeProfilo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        />
    <TextView
        android:layout_marginTop="@dimen/marginTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Metodo di rilevamento"
        android:textColor="@color/textColor"
        />
    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <RadioButton
        android:layout_marginTop="@dimen/marginTopButtons"
        android:id="@+id/gpsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GPS"/>

    <RadioButton
        android:id="@+id/wifiButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wifi"/>
    <RadioButton
        android:id="@+id/nfcButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NFC"/>
    <RadioButton
        android:id="@+id/beaconButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Beacon"/>
    </RadioGroup>
    <LinearLayout
        android:layout_marginTop="@dimen/marginTop"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/lume"
            android:layout_width="@dimen/widthLayout"
            android:layout_height="wrap_content"
            android:text="LuminositÃ "
            android:textColor="@color/textColor"/>
    <SeekBar

        android:id="@+id/brightnessBar"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/lume"
        android:layout_gravity="center_vertical"
        />
    <CheckBox
        android:id="@+id/brightnessCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Auto"
        android:layout_alignParentRight="true"/>
    </LinearLayout>

    <RelativeLayout
    android:layout_marginTop="@dimen/marginTop"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/volume"
        android:layout_width="@dimen/widthLayout"
        android:layout_height="wrap_content"
        android:text="Volume"
        android:textColor="@color/textColor"/>
    <SeekBar
        android:id="@+id/volumeBar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/volume" />
</RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="@dimen/marginTop"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/bluetooth"
            android:layout_width="@dimen/widthLayout"
            android:layout_height="wrap_content"
            android:text="Bluetooth"
            android:textColor="@color/textColor"/>
        <Switch
            android:id="@+id/switchBluetooth"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/bluetooth" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="@dimen/marginTop"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/wifi"
            android:layout_width="@dimen/widthLayout"
            android:layout_height="wrap_content"
            android:text="Wifi"
            android:textColor="@color/textColor"/>
        <Switch
            android:id="@+id/switchWifi"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/wifi" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/confirmButton"
            android:text="CREA"
            android:background="@color/buttonColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:textAlignment="center"
            android:textColor="#FFF"
            android:layout_marginTop="@dimen/marginTop"
            android:layout_marginBottom="0px"
            />
        <Button
            android:id="@+id/appListButton"
            android:text="APP"
            android:background="@color/buttonColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_weight="0.5"
            android:textAlignment="center"
            android:textColor="#FFF"
            android:layout_marginTop="@dimen/marginTop"
            android:layout_marginBottom="0px"
            />
    </RelativeLayout>

</LinearLayout>
