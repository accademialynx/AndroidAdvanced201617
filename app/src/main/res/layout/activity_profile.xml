<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Nome del Profilo"
        android:textSize="25sp"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Metodo di Rilevamento"
        android:textStyle="bold"
        android:layout_marginTop="20sp"
        android:layout_marginLeft="20dp"
        android:textSize="20sp"/>

    <RadioGroup
        android:id="@+id/radiogr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="40dp">

        <RadioButton
            android:id="@+id/radiogps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GPS"/>

        <RadioButton
            android:id="@+id/radiowifi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wifi"/>

        <RadioButton
            android:id="@+id/radioncf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NCF"/>

        <RadioButton
            android:id="@+id/radiobeacon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Beacon"/>
    </RadioGroup>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:layout_weight="0.38">

    <TextView
           android:id="@+id/textView3"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="20dp"
           android:hint="LuminositÃ " />

    <SeekBar
           android:id="@+id/seek1"
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:layout_margin="-10dp"
           android:layout_marginTop="20dp"
           android:layout_marginLeft="80dp"/>

        <CheckBox android:id="@+id/checkbox_auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="270dp"
            android:text="Auto"
            android:onClick="onCheckboxClicked"/>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:hint="Volume" />

        <SeekBar
            android:id="@+id/seek2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="-10dp"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="80dp"/>

    </RelativeLayout>

    <Switch
        android:id="@+id/mySwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:text="Bluetooth" />

    <Switch
        android:id="@+id/mySwitch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:text="Wi-fi" />

    <Switch
        android:id="@+id/mySwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:text="App" />

    <Button
        android:id="@+id/buttoncrea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:color="@color/colorPrimary"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="Crea" />
</LinearLayout>
